{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "portainer",
      "matchPackageNames": [
        "/^portainer/portainer-ee$/",
        "/^portainer/agent$/"
      ]
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["postgres"],
      "groupName": null
    }
  ]
}
